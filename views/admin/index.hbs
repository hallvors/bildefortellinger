{{#if user}}
<h1>
	Velkommen, {{#if user.friendly_name}}{{user.friendly_name}}{{else}}{{user.name}}{{/if}}
</h1>

{{#if project}}
	<h2>Bildesamling: {{project.name}}</h2>
	<p>Lenke:
		<a href="https://bildefortellinger.herokuapp.com/{{project.name}}/NAVN">https://bildefortellinger.herokuapp.com/{{project.name}}/NAVN</a>
	</p>
	{{#if recordings}}
		<table>
			<tr>
				<th>Elev</th>
				<th>Opptak</th>
			</tr>
			{{#each recordings}}
				<tr>
					<td>{{pupil}}</td>
					<td><a href="{{url}}">{{url}}</a></td>
				</tr>
			{{/each}}
		</table>
	{{/if}}
	<div class="admin-images">
		{{#each project.images}}
				<span><img src="{{asset.url}}?w=100&fit=max"></span>
		{{/each}}

		<form method="post" action="/admin/image" enctype="multipart/form-data">
			Nytt bilde<br>(NB: b√∏r lastes opp i riktig rekkef√∏lge): 
			<br>
			<input type="file" name="image" onchange="this.form.submit()">
			<input type="hidden" name="project" value="{{project.name}}">
		</form>
	</div>
	<span class="clearfix"></span>
	<h3>Hjelpelydfil</h3>
	{{#if project.helprecording}}
		<form method="post" action="/admin">
			<audio
				controls
				src="{{project.helprecording.asset.url}}">
					<code>audio</code> element st√∏ttes ikke.
			</audio>
			<button type="submit" name="delete_recording" value="{{project.helprecording.asset._id}}" class="icon"> üóëÔ∏è </button>
			<input type="hidden" name="project" value="{{project.name}}">
		</form>
	{{else}}
		<form method="post" action="/admin/helprecording" enctype="multipart/form-data">
			Last opp hjelpe-fil (lydopptak): 
			<input type="file" name="helprecording">
			<input type="hidden" name="project" value="{{project.name}}">
			<input type="submit" name="" value="Last opp">
		</form>
	{{/if}}
{{/if}}

{{#if projects}}
<h2>Dine bildesamlinger</h2>
<ul>
{{#each projects}}
	<li>
		<a href="/admin/{{name}}">{{name}}</a>
	</li>
{{/each}}
</ul>
{{/if}}



<div class="siema">
{{#each images}}
	<div class="slide">
		<img src="{{this}}" />
	</div>
{{else}}
	<p class="error">Hei{{#if name}} {{name}}{{/if}}! Vi fant ingen bilder å fortelle om. Kan du be om lenke til bildene på nytt?</p>
{{/each}}
</div>
{{#if name}}
<input type="hidden" value="{{name}}" id="name">
<input type="hidden" value="{{project}}" id="project">
{{/if}}
<nav id="toolbar"></nav>
<nav id="rec-toolbar">
	<button id="waste-btn"><img src="/images/kast.png" alt="Avbryt opptak"></button>
	<span id="state-indicator"></span>
	<button id="send-btn"><img src="/images/send.png" alt="Send opptak til lærer"></button>
</nav>
{{#if helpaudiourl}}
<audio src="{{helpaudiourl}}" id="help-audio"></audio>
{{/if}}